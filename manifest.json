{
  "manifest_version": 3,
  "name": "Watch and download on Shikimori",
  "short_name": "Watch on Shikimori",
  "version": "4.0.0",
  "description": "The addon adds the ability to watch and download anime on the Shikimori website.",
  "icons": {
    "128": "assets/icons/logo128.png"
  },
  "host_permissions": [
    "*://*.anilibria.tv/*",
    "*://shikimori.one/*"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "{0dccad16-7fec-4fd4-93c1-f43117a2a4d0}",
      "strict_min_version": "91.0"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://shikimori.one/*"],
      "js": ["content.bundle.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/torrent-icons/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
